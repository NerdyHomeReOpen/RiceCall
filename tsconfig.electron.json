{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "build",
    "skipLibCheck": true
  },
  "include": ["main.ts", "i18n.ts"],
  "exclude": ["node_modules"]
}
