{
  "scripts": {
    "dev": "tsx -r dotenv/config src/index.ts",
    "build": "tsc && tsc-alias -p tsconfig.json",
    "start": "node --inspect --max-old-space-size=4096 -r dotenv/config dist/index.js",
    "backup": "tsx -r dotenv/config src/database/scripts/backup-db.ts",
    "restore": "tsx -r dotenv/config src/database/scripts/restore-db.ts",
    "setup": "tsx -r dotenv/config src/database/scripts/setup-db.ts",
    "execute": "tsx -r dotenv/config",
    "test": "jest --no-coverage",
    "test:detail": "jest --coverage",
    "test:watch": "jest --watch",
    "test:socket-coverage": "jest --coverage --collectCoverageFrom=\"socket/**/*.js\""
  },
  "dependencies": {
    "@types/node": "^22.15.3",
    "@types/socket.io": "^3.0.2",
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.1",
    "formidable": "^3.5.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.1",
    "nodemailer": "^7.0.3",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "uuid": "^11.0.5",
    "zod": "^3.24.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/formidable": "^3.4.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/nodemailer": "^6.4.17",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.4",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0"
  }
}
