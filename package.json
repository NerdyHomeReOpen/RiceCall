{
  "name": "ricecall",
  "version": "0.1.12",
  "private": false,
  "description": "Ricecall",
  "author": {
    "name": "RiceCall Group",
    "email": "support@ricecall.com.tw",
    "url": "https://ricecall.com.tw"
  },
  "main": "./build/main.js",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack --port %NEXT_PUBLIC_PORT%",
    "start": "next start",
    "build": "next build",
    "export": "next export",
    "lint": "next lint",
    "electron-dev": "concurrently \"dotenv -e .env -- npm run dev\" \"electron -r tsx -r dotenv/config main.ts --dev\"",
    "electron-start": "npm run start && electron -r tsx -r dotenv/config main.ts",
    "electron-build": "npm run build && tsc -p tsconfig.electron.json && electron-builder",
    "electron-build-deb": "npm run build && tsc -p tsconfig.electron.json && electron-builder --linux deb",
    "electron-build-mac": "npm run build && tsc -p tsconfig.electron.json && electron-builder --mac dmg"
  },
  "dependencies": {
    "@crowdin/ota-client": "^2.0.1",
    "discord-rpc": "^4.0.1",
    "dompurify": "^3.2.5",
    "dotenv": "^16.5.0",
    "electron-serve": "^2.1.1",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "emoji.json": "^15.1.0",
    "highlight.js": "^11.11.1",
    "i18next": "^25.2.1",
    "net": "^1.0.2",
    "next": "^15.3.2",
    "path": "^0.12.7",
    "react": "^19.0.0",
    "react-dom": "^19",
    "react-i18next": "^15.5.3",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "socket.io-client": "^4.8.1",
    "twemoji": "^14.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/discord-rpc": "^4.0.9",
    "@types/node": "^20",
    "@types/react": "^19.1.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/semver": "^7.7.0",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^8.0.0",
    "electron": "^36.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "postcss": "^8",
    "stylelint": "^16.17.0",
    "stylelint-config-standard": "^37.0.0",
    "tsx": "^4.19.4",
    "typescript": "5.8.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
