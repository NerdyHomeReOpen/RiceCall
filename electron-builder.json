{
  "appId": "com.null.rcvoice",
  "productName": "RiceCall",
  "copyright": "Copyright Â© 2025 RiceCall",
  "directories": {
    "output": "dist"
  },
  "files": ["build/**/*", "out/**/*", "resources/**/*", "package.json"],
  "asar": true,
  "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
  "extraResources": [
    { "from": ".env", "to": "app.env" },
    { "from": ".env.dev", "to": "app.env.dev" }
  ],
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "perMachine": true,
    "artifactName": "${productName}-${version}-${os}-${arch}-Setup.${ext}"
  },
  "win": {
    "icon": "./resources/icon.ico",
    "target": [
      { "target": "nsis", "arch": ["x64", "ia32"] },
      { "target": "portable", "arch": ["x64", "ia32"] }
    ]
  },
  "mac": {
    "icon": "./resources/icon.icns",
    "category": "public.app-category.social-networking",
    "target": [
      { "target": "dmg", "arch": ["arm64", "x64"] },
      { "target": "zip", "arch": ["arm64", "x64"] }
    ]
  },
  "linux": {
    "icon": "./resources/icon.png",
    "category": "Network",
    "target": [
      { "target": "AppImage", "arch": ["x64"] },
      { "target": "rpm", "arch": ["x64"] },
      { "target": "zip", "arch": ["x64"] }
    ]
  },
  "deb": {
    "desktop": {
      "Path": "/opt/RiceCall",
      "Name": "RiceCall",
      "Keywords": ["ricecall", "rc"],
      "Icon": "/usr/share/icons/hicolor/300x300/apps/ricecall.png"
    },
    "description": "Ricecall is a voice chat app that allows you to chat with your friends.",
    "fpm": ["--after-install=build_deb/after-install.sh"]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "NerdyHomeReOpen",
      "repo": "RiceCall",
      "releaseType": "release",
      "channel": "latest"
    }
  ]
}
